{
  "manifest_version": 3,
  "name": "Twitter Voice Note Extension",
  "version": "1.0",
  "description": "Send voice notes in Twitter direct messages.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_security_policy": {
    "script-src": ["'self'", "'wasm-unsafe-eval'", "https://cdn.jsdelivr.net"]
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["src/contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Twitter Voice Note Extension"
  },
  "icons": {
    "16": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  }
}